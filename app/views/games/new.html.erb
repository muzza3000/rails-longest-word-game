<div class="container">
  <h1>New Game</h1>
  <div class="letter-cards">
    <ul>
      <% @letters.each do |letter| %>
        <li><%= letter %></li>
      <% end %>
    </ul>
  </div>

  <form id="input" action="/score" method="post">
    <input id="word-input" type="text" name="guess">
    <input id="play-btn" type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :start_time, @start_time %>
  </form>
  <br>
  <%= link_to 'Refresh', new_path, class: 'btn' %>
</div>
